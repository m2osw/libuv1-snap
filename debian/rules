#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_BUILD_TYPE=Release \
				-DLIBUV_BUILD_TESTS=OFF \
				-DCXX_FLAGS=-std=c++14

override_dh_install:
	ARCH=`uname -p`; \
	if test "$${ARCH}" != "x86_64"; then \
		sed -i -e "s/x86_64/$${ARCH}/g" debian/*.install; \
	fi; \
	find .; \
	mv usr/lib/$${ARCH}-linux-gnu/libuv.a usr/lib/$${ARCH}-linux-gnu/libuv-snap.a; \
	mv usr/lib/$${ARCH}-linux-gnu/libuv.so.1.0.0 usr/lib/$${ARCH}-linux-gnu/libuv-snap.so.1.0.0; \
	ln -s libuv.so.1.0.0 usr/lib/$${ARCH}-linux-gnu/libuv-snap.so.1; \
	ln -s libuv.so.1 usr/lib/$${ARCH}-linux-gnu/libuv-snap.so; \
	sed -e 's/Name: libuv/Name: libuv-snap/' -e 's/ -luv / -luv-snap /' -e 'sX\(-I.{includedir}\)X\1/libuv-snapX' usr/lib/$${ARCH}-linux-gnu/pkgconfig/libuv.pc >usr/lib/$${ARCH}-linux-gnu/pkgconfig/libuv-snap.pc
	dh_install

